{
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "target": "es5",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "plugins": [{ "transform": "typescript-transform-paths" }]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
