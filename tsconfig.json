{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "sourceMap": true,
    "allowJs": true,
    "rootDir": "src",
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "~/*": ["*"]
    }
  },
  "include": ["./src/**/*", "../types/*.d.ts"],
  "exclude": ["node_modules", "./src/**/*/test.ts"]
}
